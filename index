    <!-- Supabase Integration -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

    <script>
        // Initialize Supabase
        const supabase = window.supabase.createClient(
            'https://lqpoacfeqnkkhdnsdbuv.supabase.co',
            'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImxxcG9hY2ZlcW5ra2hkbnNkYnV2Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTk0MzUwODEsImV4cCI6MjA3NTAxMTA4MX0.VvgtSty8H6v2S6wqV9R9B5P2BkWaauRNWDzz4HRcn0Y'
        );

        // Check authentication status
        supabase.auth.getUser().then(({ data: { user } }) => {
            if (user) {
                const firstName = user.user_metadata?.first_name || 'المستخدم';

                document.getElementById('loginBtn')?.classList.add('hidden');
                document.getElementById('userAccountBtn')?.classList.remove('hidden');
                document.getElementById('userNameText') ? document.getElementById('userNameText').textContent = firstName : null;

                document.getElementById('mobileLoginBtn')?.classList.add('hidden');
                document.getElementById('mobileUserAccountBtn')?.classList.remove('hidden');
                document.getElementById('mobileUserNameText') ? document.getElementById('mobileUserNameText').textContent = firstName : null;
            }
        });

        // Enhanced Modal Functions
        function openVideoModal() {
            document.getElementById('videoModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeVideoModal() {
            document.getElementById('videoModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function openEbookModal() {
            document.getElementById('ebookModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeEbookModal() {
            document.getElementById('ebookModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function openSentencesModal() {
            document.getElementById('sentencesModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeSentencesModal() {
            document.getElementById('sentencesModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Enhanced Mobile Menu Functions
        function closeMobileMenu() {
            document.getElementById('mobile-menu').classList.add('hidden');
            const spans = document.getElementById('mobile-menu-toggle').querySelectorAll('span');
            spans.forEach(span => {
                span.style.transform = '';
                span.style.opacity = '';
            });
            document.getElementById('mobile-menu-toggle').setAttribute('aria-expanded', 'false');
        }

        // Enhanced Form Handling
        document.getElementById("ebookForm").addEventListener("submit", function(e) {
            e.preventDefault();

            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.disabled = true;
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<span>جاري الإرسال...</span>';

            const name = document.getElementById("parentName").value;
            const whatsapp = document.getElementById("whatsappNumber").value;
            const age = document.getElementById("childAge").value;

            // Validate and normalize phone number
            let normalizedWhatsapp = whatsapp.replace(/[^\d]/g, '');

            if (normalizedWhatsapp.startsWith('0')) {
                normalizedWhatsapp = '966' + normalizedWhatsapp.substring(1);
            } else if (normalizedWhatsapp.startsWith('966')) {
                // Already correct
            } else if (normalizedWhatsapp.length === 9 && !normalizedWhatsapp.startsWith('966')) {
                normalizedWhatsapp = '966' + normalizedWhatsapp;
            }

            if (!normalizedWhatsapp.match(/^966[0-9]{9}$/)) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                alert("الرجاء إدخال رقم واتساب صحيح (مثال: 966501234567 أو 0501234567)");
                return;
            }

            const message = `مرحباً، أريد الحصول على الكتاب المجاني "7 طرق لتعليم طفلك الإنجليزية في المنزل بدون تعقيد"

الاسم: ${name}
رقم الواتساب: ${normalizedWhatsapp}
عمر الطفل: ${age}`;

            setTimeout(() => {
                const whatsappUrl = `https://wa.me/${normalizedWhatsapp}?text=${encodeURIComponent(message)}`;
                window.open(whatsappUrl, "_blank");

                alert("تم إرسال طلبك بنجاح! سنرسل لك الكتاب عبر الواتساب خلال دقائق.");

                submitBtn.disabled = false;
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;

                closeEbookModal();
                document.getElementById("ebookForm").reset();
            }, 500);
        });

        // Close modals with Escape key
        document.addEventListener("keydown", function(e) {
            if (e.key === "Escape") {
                closeEbookModal();
                closeSentencesModal();
                closeVideoModal();
            }
        });

        // Close modals when clicking outside
        document.addEventListener("click", function(e) {
            const ebookModal = document.getElementById("ebookModal");
            const sentencesModal = document.getElementById("sentencesModal");
            const videoModal = document.getElementById("videoModal");

            if (e.target === ebookModal) closeEbookModal();
            if (e.target === sentencesModal) closeSentencesModal();
            if (e.target === videoModal) closeVideoModal();
        });

        // Enhanced Scroll and Animation Effects
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Menu Toggle
            const menuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');

            if (menuToggle && mobileMenu) {
                menuToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isHidden = mobileMenu.classList.contains('hidden');
                    mobileMenu.classList.toggle('hidden');

                    const spans = menuToggle.querySelectorAll('span');
                    spans.forEach((span, index) => {
                        if (!isHidden) {
                            span.style.transform = '';
                            span.style.opacity = '';
                        } else {
                            if (index === 0) span.style.transform = 'rotate(45deg) translateY(8px)';
                            if (index === 1) span.style.opacity = '0';
                            if (index === 2) span.style.transform = 'rotate(-45deg) translateY(-8px)';
                        }
                    });

                    menuToggle.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
                });

                // Close menu when clicking menu links
                const menuLinks = mobileMenu.querySelectorAll('a[href^="#"]');
                menuLinks.forEach(link => {
                    link.addEventListener('click', closeMobileMenu);
                });

                // Close menu when clicking outside
                document.addEventListener('click', function(e) {
                    if (!menuToggle.contains(e.target) && !mobileMenu.contains(e.target)) {
                        if (!mobileMenu.classList.contains('hidden')) {
                            closeMobileMenu();
                        }
                    }
                });
            }

            // Pricing Tabs
            const serviceTabs = document.querySelectorAll('.service-tab');
            const pricingSections = document.querySelectorAll('.pricing-section');

            serviceTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const targetService = this.getAttribute('data-service');

                    serviceTabs.forEach(t => {
                        t.classList.remove('active', 'text-primary-600', 'bg-white');
                        t.classList.add('text-gray-600');
                    });
                    this.classList.add('active', 'text-primary-600', 'bg-white');
                    this.classList.remove('text-gray-600');

                    pricingSections.forEach(section => {
                        if (section.id === targetService + '-pricing') {
                            section.classList.remove('hidden');
                        } else {
                            section.classList.add('hidden');
                        }
                    });
                });
            });

            // Scroll Animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });

            // Fixed WhatsApp Button Animation
            const whatsappFixed = document.getElementById('whatsapp-fixed');
            if (whatsappFixed) {
                window.addEventListener('scroll', function() {
                    if (window.scrollY > 500) {
                        whatsappFixed.classList.add('opacity-100', 'visible');
                        whatsappFixed.classList.remove('opacity-0', 'invisible');
                    } else {
                        whatsappFixed.classList.remove('opacity-100', 'visible');
                        whatsappFixed.classList.add('opacity-0', 'invisible');
                    }
                });
            }

            // Smooth Scrolling for Anchor Links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
