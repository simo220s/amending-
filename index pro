    <!-- JavaScript -->
    <script>
        // Check if user is logged in
        const supabase = window.supabase.createClient(
            'https://lqpoacfeqnkkhdnsdbuv.supabase.co',
            'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImxxcG9hY2ZlcW5ra2hkbnNkYnV2Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTk0MzUwODEsImV4cCI6MjA3NTAxMTA4MX0.VvgtSty8H6v2S6wqV9R9B5P2BkWaauRNWDzz4HRcn0Y'
        );

        supabase.auth.getUser().then(({ data: { user } }) => {
            if (user) {
                // User is logged in
                const firstName = user.user_metadata?.first_name || 'المستخدم';
                
                // Desktop
                document.getElementById('loginBtn').classList.add('hidden');
                document.getElementById('userAccountBtn').classList.remove('hidden');
                document.getElementById('userNameText').textContent = firstName;
                
                // Mobile
                document.getElementById('mobileLoginBtn').classList.add('hidden');
                document.getElementById('mobileUserAccountBtn').classList.remove('hidden');
                document.getElementById('mobileUserNameText').textContent = firstName;
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Menu Toggle with improved UX
            const menuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (menuToggle && mobileMenu) {
                menuToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isHidden = mobileMenu.classList.contains('hidden');
                    mobileMenu.classList.toggle('hidden');
                    
                    // Toggle hamburger animation
                    const spans = menuToggle.querySelectorAll('span');
                    spans.forEach((span, index) => {
                        if (!isHidden) {
                            // Closing menu
                            span.style.transform = '';
                        } else {
                            // Opening menu - create X shape
                            if (index === 0) span.style.transform = 'rotate(45deg) translateY(8px)';
                            if (index === 1) span.style.opacity = '0';
                            if (index === 2) span.style.transform = 'rotate(-45deg) translateY(-8px)';
                        }
                    });
                    
                    // Add aria-expanded for accessibility
                    menuToggle.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
                });
                
                // Close menu when clicking menu links
                const menuLinks = mobileMenu.querySelectorAll('a[href^="#"]');
                menuLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        mobileMenu.classList.add('hidden');
                        const spans = menuToggle.querySelectorAll('span');
                        spans.forEach(span => {
                            span.style.transform = '';
                            span.style.opacity = '';
                        });
                        menuToggle.setAttribute('aria-expanded', 'false');
                    });
                });
                
                // Close menu when clicking outside
                document.addEventListener('click', function(e) {
                    if (!menuToggle.contains(e.target) && !mobileMenu.contains(e.target)) {
                        if (!mobileMenu.classList.contains('hidden')) {
                            mobileMenu.classList.add('hidden');
                            const spans = menuToggle.querySelectorAll('span');
                            spans.forEach(span => {
                                span.style.transform = '';
                                span.style.opacity = '';
                            });
                            menuToggle.setAttribute('aria-expanded', 'false');
                        }
                    }
                });
            }

            // Header Scroll Effect
            const header = document.querySelector('.site-header');
            if (header) {
                window.addEventListener('scroll', function() {
                    if (window.scrollY > 10) {
                        header.classList.add('scrolled');
                    } else {
                        header.classList.remove('scrolled');
                    }
                });
            }

            // Pricing Tabs
            const serviceTabs = document.querySelectorAll('.service-tab');
            const pricingSections = document.querySelectorAll('.pricing-section');
            
            serviceTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const targetService = this.getAttribute('data-service');
                    
                    // Update active tab
                    serviceTabs.forEach(t => {
                        t.classList.remove('active', 'text-primary-600', 'bg-primary-50');
                        t.classList.add('text-gray-600');
                    });
                    this.classList.add('active', 'text-primary-600', 'bg-primary-50');
                    this.classList.remove('text-gray-600');
                    
                    // Show/hide pricing sections
                    pricingSections.forEach(section => {
                        if (section.id === targetService + '-pricing') {
                            section.classList.remove('hidden');
                        } else {
                            section.classList.add('hidden');
                        }
                    });
                });
            });

            // Scroll Animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });

            // Fixed WhatsApp Button
            const whatsappFixed = document.getElementById('whatsapp-fixed');
            if (whatsappFixed) {
                window.addEventListener('scroll', function() {
                    if (window.scrollY > 500) {
                        whatsappFixed.classList.add('opacity-100', 'visible');
                        whatsappFixed.classList.remove('opacity-0', 'invisible');
                    } else {
                        whatsappFixed.classList.remove('opacity-100', 'visible');
                        whatsappFixed.classList.add('opacity-0', 'invisible');
                    }
                });
            }

            // Smooth Scrolling for Anchor Links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
