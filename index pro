    <script>
        // Modal Functions
        function openEbookModal() {
            document.getElementById("ebookModal").classList.remove("hidden");
            document.body.style.overflow = "hidden";
        }
        
        function closeEbookModal() {
            document.getElementById("ebookModal").classList.add("hidden");
            document.body.style.overflow = "auto";
        }
        
        function openSentencesModal() {
            document.getElementById("sentencesModal").classList.remove("hidden");
            document.body.style.overflow = "hidden";
        }
        
        function closeSentencesModal() {
            document.getElementById("sentencesModal").classList.add("hidden");
            document.body.style.overflow = "auto";
        }
        
        // Close modals when clicking outside
        document.getElementById("ebookModal").addEventListener("click", function(e) {
            if (e.target === this) {
                closeEbookModal();
            }
        });
        
        document.getElementById("sentencesModal").addEventListener("click", function(e) {
            if (e.target === this) {
                closeSentencesModal();
            }
        });
        
        // Handle ebook form submission with loading state
        document.getElementById("ebookForm").addEventListener("submit", function(e) {
            e.preventDefault();
            
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            // Add loading state
            submitBtn.disabled = true;
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<span>Ø¬Ø§Ø±ÙŠ Ø§Ù„Ø¥Ø±Ø³Ø§Ù„...</span>';
            
            const name = document.getElementById("parentName").value;
            const whatsapp = document.getElementById("whatsappNumber").value;
            const age = document.getElementById("childAge").value;
            
            // Validate phone number format
            if (!whatsapp.match(/^966[0-9]{9}$/)) {
                submitBtn.disabled = false;
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                alert("Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ Ø±Ù‚Ù… ÙˆØ§ØªØ³Ø§Ø¨ ØµØ­ÙŠØ­ Ø¨ØµÙŠØºØ©: 966xxxxxxxxx");
                return;
            }
            
            // Create WhatsApp message
            const message = `Ù…Ø±Ø­Ø¨Ø§Ù‹ØŒ Ø£Ø±ÙŠØ¯ Ø§Ù„Ø­ØµÙˆÙ„ Ø¹Ù„Ù‰ Ø§Ù„ÙƒØªØ§Ø¨ Ø§Ù„Ù…Ø¬Ø§Ù†ÙŠ "7 Ø·Ø±Ù‚ Ù„ØªØ¹Ù„ÙŠÙ… Ø·ÙÙ„Ùƒ Ø§Ù„Ø¥Ù†Ø¬Ù„ÙŠØ²ÙŠØ© ÙÙŠ Ø§Ù„Ù…Ù†Ø²Ù„"

Ø§Ù„Ø§Ø³Ù…: ${name}
Ø±Ù‚Ù… Ø§Ù„ÙˆØ§ØªØ³Ø§Ø¨: ${whatsapp}
Ø¹Ù…Ø± Ø§Ù„Ø·ÙÙ„: ${age}`;
            
            // Simulate delay for better UX
            setTimeout(() => {
                // Open WhatsApp with the message
                const whatsappUrl = `https://wa.me/966564084838?text=${encodeURIComponent(message)}`;
                window.open(whatsappUrl, "_blank");
                
                // Show success message
                alert("ØªÙ… Ø¥Ø±Ø³Ø§Ù„ Ø·Ù„Ø¨Ùƒ Ø¨Ù†Ø¬Ø§Ø­! Ø³Ù†Ø±Ø³Ù„ Ù„Ùƒ Ø§Ù„ÙƒØªØ§Ø¨ Ø¹Ø¨Ø± Ø§Ù„ÙˆØ§ØªØ³Ø§Ø¨ Ø®Ù„Ø§Ù„ Ø¯Ù‚Ø§Ø¦Ù‚.");
                
                // Reset button state
                submitBtn.disabled = false;
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = originalText;
                
                // Close modal and reset form
                closeEbookModal();
                document.getElementById("ebookForm").reset();
            }, 500);
        });
        
        // Close modals with Escape key
        document.addEventListener("keydown", function(e) {
            if (e.key === "Escape") {
                closeEbookModal();
                closeSentencesModal();
            }
        });
    </script>

